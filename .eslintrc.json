{
  "root": true,
  "extends": ["airbnb-base", "plugin:@typescript-eslint/recommended-requiring-type-checking"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": 2,
    "no-console": "off",
    "max-len": 0,
    "strict": "warn"
  }
}
